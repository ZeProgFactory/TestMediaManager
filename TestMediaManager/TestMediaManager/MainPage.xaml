<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TestMediaManager"
             x:Class="TestMediaManager.MainPage">

   <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="Auto"/>
         <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <Label Grid.Row="0" x:Name="labelInfo" Margin="10" BackgroundColor="LightGray" />

      <StackLayout Grid.Row="1" Padding="5">

         <Button Text="Audio" HorizontalOptions="Center" Clicked="Button_Audio_Clicked" />

         <Button Text="Video" HorizontalOptions="Center" Clicked="Button_Video_Clicked" />

         <Button Text="Play multiple"  IsEnabled="False"  HorizontalOptions="Center" Clicked="Button_PlayMultiple_Clicked" />
      </StackLayout>
   </Grid>

</ContentPage>
